<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Welcome</title>
    <script src="/js/home.js" defer></script>
    <link href="https://bootswatch.com/4/cosmo/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" crossorigin="anonymous">
    </script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" crossorigin="anonymous">
    </script>

    <style>
        img {
            cursor: pointer;
            width: 40px;
            height: 40px;
        }

        .table td {
            padding: 0.55rem
        }
    </style>

</head>

<body style="background-color: #efefef">
    <!-- Nav Bar on Top -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <a class="navbar-brand" href="#">Bands</a>
        <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
                <a class="nav-link" href="#">Welcome <%= username %> <span class="sr-only">(current)</span></a>
            </li>
        </ul>
        <a class="btn btn-danger" style="border-radius: 15px;color: white;" onmouseover="this.style.cursor='pointer'"
            href="/logout">Logout</a>
    </nav>

    <div class="container">
        <div style="display: flex; padding: 0.6%;">
            <h1>Band's</h1>
            <img src="/img/create-band.png" style="position: absolute; right: 16%;" id="create-band">
        </div>
        <div class="jumbotron" style="background: #ffffff; padding: 2rem 1rem;">
            <!-- <h3 class="md-2">Bands </h3> -->
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">S.No</th>
                        <th scope="col">Band Name</th>
                        <th scope="col">Band Description</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% 
                    var i=1
                    band.list.forEach((b) =>{
                        let editVal = "editBand("+b.bandID+")";
                        let delVal = "deleteBand("+b.bandID+")";
                    %>
                    <tr class="table-light">
                        <th scope="row"><%= i++%></th>
                        <td id="name"><%= b.bandName%></td>
                        <td id="desc"><%= b.bandDesc%></td>
                        <td><img onclick=<%= editVal %> src="/img/edit-icon.png"><img onclick=<%= delVal%>
                                style="margin-left: 0.7em;" src="/img/delete-icon.png"></td>
                    </tr>
                    <%
                })
                    %>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Create/Update Modal -->

    <div class="modal" style=" margin-top: 5%;">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Create/Update Band</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form id="cu-form">
                    <div class="modal-body">
                        <fieldset>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Name:</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control-plaintext" id="ip-band-name"
                                        placeholder="Enter Band Name" required>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Description:</label>
                                <div class="col-sm-10">
                                    <textarea cols="5" rows="5" style="resize: none;" class="form-control-plaintext"
                                        id="ip-band-desc" placeholder="Enter Band Description"></textarea>
                                </div>
                            </div>
                        </fieldset>
                    </div>
                    <div class="modal-footer">
                        <!-- <button type="submit" class="btn btn-primary">Save changes</button> -->
                        <input type="submit" class="btn btn-primary" value="Create">
                        <input type="reset" class="btn btn-secondary" data-dismiss="modal" value="Close">
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>

</html>